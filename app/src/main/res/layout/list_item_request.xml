<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_request_background"
    android:background="@drawable/item_contact_backgroud"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_horizontal_margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <ImageView
            android:id="@+id/iv_request_image"
            android:layout_width="@dimen/contact_icon_size"
            android:layout_height="@dimen/contact_icon_size"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="@dimen/space_between_different_view"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_request_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sn_18sp"
                />

            <TextView
                android:id="@+id/tv_request_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/sn_14sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_request_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/long_message_height"
        android:background="@color/colorAccent_transparent"
        android:padding="@dimen/textmagrgin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_between_different_view"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_request_refuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/btn_refuse" />

        <View
            android:layout_width="@dimen/space_between_different_view"
            android:layout_height="match_parent"></View>

        <Button
            android:id="@+id/btn_request_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/btn_accept" />
    </LinearLayout>
</LinearLayout>