<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title"
            android:scaleType="centerInside"/>
        <EditText
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/hint_account"
            android:layout_below="@+id/iv_icon"
            android:textColorHint="@color/hint_dark"
            android:textColor="@color/black"
            android:singleLine="true"
            android:padding="@dimen/textmagrgin" />
        <EditText
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/tv_account"
            android:hint="@string/hint_password"
            android:textColorHint="@color/hint_dark"
            android:textColor="@color/black"
            android:singleLine="true"
            android:padding="@dimen/textmagrgin"/>
        <EditText
            android:id="@+id/tv_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/tv_password"
            android:hint="@string/hint_password_again"
            android:textColorHint="@color/hint_dark"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:singleLine="true"
            android:padding="@dimen/textmagrgin"/>

        <View
            android:id="@+id/view_space"
            android:layout_below="@+id/tv_password_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_between_different_view"/>
        <LinearLayout
            android:layout_below="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_login" />
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_hight"
                android:textColor="@color/white"
                android:text="@string/hint_signup"
                android:gravity="center"
                android:background="@color/transparent"/>
        </LinearLayout>
</RelativeLayout>